@if (this.User.Identity.IsAuthenticated)
{
    <div class="p-2 m-2 border-bottom">
        <form method="post" asp-controller="Weets" asp-action="Create" enctype="multipart/form-data">
            <div class="row w-100 mx-auto">
                <div class="form-group w-100">
                    <textarea type="text" class="form-control" name="Content" placeholder="Weet here"></textarea>
                </div>
                <div class="form-group w-100">
                    <input type="text" class="form-control" name="tags" placeholder="tags..." />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input class="custom-file-input" type="file" name="image">
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
                    </div>
                </div>
                <div class="col">

                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary my-2 float-right">Submit</button>
                </div>
            </div>
            <input type="text" name="returnUrl" value="@this.Context.Request.Path.Value" hidden />
        </form>
    </div>
}