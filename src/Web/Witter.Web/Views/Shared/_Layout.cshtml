@using Witter.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@($"{this.ViewData["Title"]} | {GlobalConstants.SystemName}")</title>

    <!-- bootstrap -->
    <link rel="stylesheet" href="~/vendor/bootstrap/bootstrap.min.css">

    <!-- font awesome icons -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.0/css/all.css" integrity="sha384-aOkxzJ5uQz7WBObEZcHvV5JvRW3TUc2rNPA7pe3AwnsUohiw1Vj2Rgx2KSOkF5+h" crossorigin="anonymous">

    <!-- lazy styling -->
    <link rel="stylesheet" href="~/css/lazy.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="col-sm">
                <a class="navbar-brand" asp-controller="Pages" asp-action="Feed">@GlobalConstants.SystemName</a>
            </div>
            <div class="col-sm">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarColor02">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Pages" asp-action="Feed">Feed</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Pages" asp-action="Explore">Explore</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Pages" asp-action="Notifications">Notifications</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-sm">
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <main role="main">
        <partial name="_CookieConsentPartial" />
        @this.RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-copyright text-center py-3  border-top border-info">
            © 2020 Copyright:
            &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <!-- Footer -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/popper/popper.min.js"></script>
    <script src="~/vendor/bootstrap/bootstrap.min.js"></script>

    <!--   lazy javascript -->
    <script src="~/js/lazy.js"></script>

    @this.RenderSection("Scripts", required: false)
</body>
</html>
